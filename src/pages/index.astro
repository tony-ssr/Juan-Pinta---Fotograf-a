					<!-- Navegación Desktop -->
					<div class="hidden md:flex items-center space-x-8">
						<a href="#inicio" class="text-gray-700 hover:text-gray-900 transition-colors font-medium">Inicio</a>
						<a href="#sobre-mi" class="text-gray-700 hover:text-gray-900 transition-colors font-medium">Sobre Mí</a>
						<a href="#servicios" class="text-gray-700 hover:text-gray-900 transition-colors font-medium">Servicios</a>
						<a href="#portafolio" class="text-gray-700 hover:text-gray-900 transition-colors font-medium">Portafolio</a>
						<a href="#contacto" class="bg-gray-900 text-white px-6 py-2 rounded-full hover:bg-gray-800 transition-colors font-medium">Contacto</a>
