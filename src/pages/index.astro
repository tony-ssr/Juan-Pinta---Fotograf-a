					<button id="mobile-menu-btn" class="md:hidden p-2">
						<i data-lucide="menu" class="w-6 h-6"></i>
					</button>
				</div>
				
				<!-- Menú móvil desplegable -->
				<div id="mobile-menu" class="md:hidden hidden mt-4 pb-4 border-t border-gray-100">
					<div class="flex flex-col space-y-4 pt-4">
						<a href="#inicio" class="text-gray-700 hover:text-gray-900 transition-colors font-medium">Inicio</a>
						<a href="#sobre-mi" class="text-gray-700 hover:text-gray-900 transition-colors font-medium">Sobre Mí</a>
